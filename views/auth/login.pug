extends ../layout/common.pug

block content

	h1 Login
	if errors
		each error in errors
			.alert.alert-info= error
	  
	form( method="POST")
		.form-group
			label(for="email") Email
			input#email.form-control(name="email", type="text", value= value?values.email:'')
		.form-group
			label(for="pass") Password
			input#pass.form-control(name="pass", type="password", value=value?values.pass:'' )
		button(class="btn btn-secondary") Login