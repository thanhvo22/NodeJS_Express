extends ../layout/common.pug

block content

	h1 Create Users
	if errors
		each error in errors
			.alert.alert-info= error
	  
	form(action="/users/create", method="POST", enctype="multipart/form-data")
		.form-group
			label(for="name") Name
			input#name.form-control(name="name", type="text", value= value?value.name:'')
		.form-group
			label(for="phone") Phone
			input#phone.form-control(name="phone", type="text", value=value?value.phone:'' )
		.form-group
			label(for="avatar") Avatar
			input#avatar.form-control-file(name="avatar", type="file")
		button(class="btn btn-secondary") Create